{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/main/**/*.ts",
    "src/main/**/*.d.ts",
    "src/common/**/*.d.ts",
    "src/common/**/*.ts"
  ],
  "exclude": [
    "packages/*",
    "src/render/*"
  ]
}
